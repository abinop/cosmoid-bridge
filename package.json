{
  "name": "cosmoid-bridge",
  "version": "1.0.0",
  "description": "Bridge application for connecting web applications to Cosmoid BLE devices",
  "main": "src/main/index.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder build",
    "package:mac": "electron-builder --mac --universal",
    "package:win": "electron-builder --win --x64 --dir",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.filisia.cosmoidbridge",
    "productName": "Cosmoid Bridge",
    "asar": true,
    "asarUnpack": [
      "node_modules/@abandonware/noble/**/*"
    ],
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/@abandonware/noble/lib/**/*",
      "node_modules/@abandonware/noble/build/Release/*.node"
    ],
    "extraResources": [
      {
        "from": "node_modules/@abandonware/noble/build/Release/",
        "to": "noble-bindings",
        "filter": [
          "*.node"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "requestExecutionLevel": "highest"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "auto-launch": "^5.0.6",
    "electron-store": "^8.1.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  }
}
